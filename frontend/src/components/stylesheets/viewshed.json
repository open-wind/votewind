[
    {
        "id": "viewshed-towerheight",
        "source": "viewshed",
        "type": "fill",
        "filter": [
            "all",
            [
                "==",
                "$type",
                "Polygon"
            ],
            [
                "==",
                "class",
                "viewshed_towerheight"
            ]
        ],
        "paint": {
            "fill-color": "#813FCB",
            "fill-opacity": 0.5
        }
    },
    {
        "id": "viewshed-turbinetip",
        "source": "viewshed",
        "type": "fill",
        "filter": [
            "all",
            [
                "==",
                "$type",
                "Polygon"
            ],
            [
                "==",
                "class",
                "viewshed_turbinetip"
            ]
        ],
        "paint": {
            "fill-color": "#B199CC",
            "fill-opacity": 0.5
        }
    },
    {
        "id": "viewsheds_distance_circles",
        "source": "viewshed",
        "type": "line",
        "metadata": {},
        "filter": [
          "all",
          [
            "==",
            "$type",
            "LineString"
          ]
          ,
          [
            "in",
            "class",
            "Distance_Circle"
          ]
        ],
        "layout": {
          "line-cap": "round",
          "line-join": "round"
        },
        "paint": {
          "line-color": "#BC262C",
          "line-opacity": 0.5,
          "line-width": 1,
          "line-dasharray": [
            3,
            3
          ]
        }
    },
    {
        "id": "viewsheds_distance_circle_labels",
        "source": "viewshed",
        "type": "symbol",
        "metadata": {},
        "filter": [
            "all",
            [
                "==",
                "$type",
                "Point"
            ],
            [
                "==",
                "class",
                "Distance_Circle_Label"
            ]
        ],
        "layout": {
            "text-offset": [0, 1],
            "text-field": "{name}",
            "text-font": [
                "Noto Sans Regular"
            ],
            "text-size": {
                "stops": [
                    [
                        8,
                        10
                    ],
                    [
                        12,
                        14
                    ]
                ]
            }
        },
        "minzoom": 5,
        "paint": {
            "text-color": "#BC262C",
            "text-halo-blur": 2,
            "text-halo-color": "hsla(0, 0%, 100%, 0.75)",
            "text-halo-width": 2
        }
    }
]